#!/bin/bash

##
# This script calls the TestEmitter to emit a Command::Rotate event that tell the journallers
# to rotate their log files.
##
for jar in lib/*.jar
do
  if [ -z $CP ]; then
    CP=${jar}
  else
    CP=${CP}:${jar}
  fi
done
CP=${CP}:config

$JAVA_HOME/bin/java \
-Dlog4j.configuration=log4j.xml \
-classpath $CP \
org.lwes.TestEmitter -r $@